// Constants
#define drone_velocity 10
#define battery_charging_rate 50
#define battery_discharge_rate_fly 1
#define battery_discharge_rate_hover 1
#define queue_data_rate 1
#define queue_upload_rate 1

// Variable domains
#domain x [0,10]
#domain b [0,100]
#domain q [0,100]


// Relational dynamics
#complete_dynamics
mode 0:
  uav: charge
  sensor: collect
mode 1:
  uav: fly_to
  sensor: collect
mode 2:
  uav: download
  sensor: upload
mode 3:
  uav: fly_back
  sensor: collect

// Environment: variable definitions
#variables
r = t * t

// UAV Dynamics
#uav
charge:
  d/dt[x] = 0
  d/dt[b] = battery_charging_rate * t
fly_to:
  d/dt[x] = drone_velocity * t
  d/dt[b] = battery_discharge_rate_fly * t
download:
  d/dt[x] = 0
  d/dt[b] = battery_discharge_rate_hover * t
fly_back:
  d/dt[x] = -(drone_velocity * t)
  d/dt[b] = battery_discharge_rate_fly * t

// Sensor dynamics
#sensor 0
x = 10
collect:
  d/dt[q] = queue_data_rate * t
upload:
  d/dt[q] = queue_upload_rate * t

#sensor 1
x = 15
collect:
  d/dt[q] = queue_data_rate * t
upload:
  d/dt[q] = queue_upload_rate * t
